/**
 * Typography styles
 */
.small
  font-size .8em

.size-0, .normal
  font-size 1em

.size-1
  font-size 1.2em

.size-2
  font-size 1.4em

.size-3, .large
  font-size 1.6em

.size-4, .larger
  font-size 1.8em

.size-5, .huge
  font-size 2em

.ellipsis
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

.strong, .b, .bold
  font-weight 700

.med-strong, .b, .med-bold
  font-weight 500

.text-thin, .thin, .normal
  font-weight 200

.em, .i, .italic, .emphasized
  font-style italic


/**
 * Colors styles
 */
.green
  color $green

.white
  color $white

.gray
  color $gray

.black
  color $black

.bg-green
  background-color $green

.bg-white
  background-color $white

.bg-gray
  background-color $gray

.bg-black
  background-color $black


/**
 * Buttons styles
 */
.btn-neutral
  color $white
  background-color $gray
  border-color $green

/**
 * Dimentions styles
 */
.full-width
  width 100%

.full-height
  height 100%